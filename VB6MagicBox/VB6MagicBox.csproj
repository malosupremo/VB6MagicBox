<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<AssemblyTitle>VB6MagicBox</AssemblyTitle>
		<LangVersion>latest</LangVersion>
		<RootNamespace>VB6MagicBox</RootNamespace>
		<!-- Suppress warning about System.Text.Encoding.CodePages not being trimmed, as we are explicitly keeping it -->
		<NoWarn>$(NoWarn);NU1510</NoWarn>

	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="System.Text.Encoding.CodePages" Version="10.0.3" />
		<TrimmerRootAssembly Include="System.Text.Encoding.CodePages" />
	</ItemGroup>

</Project>
